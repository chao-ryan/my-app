{
    "git.ignoreLimitWarning": true,
    "editor.wordWrapColumn": 140,
    // 自动折行
    "editor.wordWrap": "on",
    "editor.fontSize": 14,
    "files.autoSave": "off",
    // git是否自动拉取
    "git.autofetch": true,
    // git只能提交
    "git.enableSmartCommit": false,
    // vscode主题配置
    "editor.tabSize": 2,
    "editor.renderLineHighlight": "none",
    // 是否允许自定义的snippet片段提示，比如自定义的vue片段开启后就可以智能提示
    "editor.snippetSuggestions": "top",
    "files.trimTrailingWhitespace": true,
    // vscdode文件搜索区域配置
    "search.exclude": {
        "**/dist":true,
        "**/build":true,
        "**/elehukouben":true,
        "**/.git":true,
        "**/.gitignore":true,
        "**/.svn":true,
        "**/.DS_Store":true,
        "**/.idea":true,
        "**/.vscode":false,
        "**/yarn.lock":true,
        "**/tmp":true
      },
      // 排除文件搜索区域，比如node_modules(默认配置设置已经屏蔽了)
      "files.exclude": {
        "**/.idea":true,
        "**/yarn.lock":true,
        "**/tmp":true,
        "**/.git":true,
        "**/.svn":true,
        "**/.hg":true,
        "**/CVS":true,
        "**/.DS_Store":true
      },
      "files.insertFinalNewline": true,
      // 配置文件关联，以便启用对应的智能提示，比如wxss使用css
      "files.associations": {
          "*.vue":"vue",
          "*.wxss":"css"
      },
      // 配置emmet是是否启用tab展开缩写
      "emmet.triggerExpansionOnTab": true,
      // 配置emmet对文件类型的支持，比如vue后缀文件按照html文件来进行emmet扩写
      "emmet.syntaxProfiles": {
          "vue-html":"html",
          "vue":"html",
          "javascript":"javascriptreact",
          // xml类型文件默认都是单引号，开启对非单引号的emmet识别
          "xml":{
              "attr_quotes":"single"
          }
      },
      // 在react的jsx中添加对emmet的支持
      "emmet.includeLanguages": {
          "jsx-sublime-babel-tags":"javascriptreact"
      },
      // 文件保存时，是否自动根据eslint进行格式化
    "eslint.autoFixOnSave": true,
      // eslint配置文件
    "eslint.options": {"configFile": "F:/Download/myGitHub/my-app/.eslintrc.json"},
      // eslint能够识别的文件后缀类型
      "eslint.validate":[
          "javascript",
          "javascriptreact",
          {"language": "html","autoFix": true,},
          {"language": "vue", "autoFix": true},
      ],
    "tslint.alwaysShowStatus": true,
    "tslint.configFile": "F:/Download/myGitHub/my-app/src/tslint.json",
    "git.detectSubmodulesLimit": 40,
}
